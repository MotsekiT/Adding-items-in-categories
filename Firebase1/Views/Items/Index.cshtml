@model IEnumerable<Firebase1.Models.Items>

@{
    ViewBag.Title = "Index";
}

<h2>Items List</h2>

<p>
    @Html.ActionLink("Upload New Item", "Create")
</p>

<table class="table">
    <tr>
        <th hidden>
            @Html.DisplayNameFor(model => model.ItemSystemCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectedCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemPrice)
        </th>
        <th hidden>
            @Html.DisplayNameFor(model => model.ItemImageName)
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td hidden>
        @Html.DisplayFor(modelItem => item.ItemSystemCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SelectedCategory)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ItemCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ItemName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ItemPrice)
    </td>
    <td hidden>
        @Html.DisplayFor(modelItem => item.ItemImageName)
    </td>
    <td>
        <img src="@item.ItemImagePath" width="100" style="border-radius:5px; border:1px solid #bbb " />
        @*@Html.DisplayFor(modelItem => item.ItemImagePath)*@
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ItemSystemCode }) |
        @Html.ActionLink("Details", "Details", new { id = item.ItemSystemCode }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ItemSystemCode })
    </td>
</tr>
}

</table>
